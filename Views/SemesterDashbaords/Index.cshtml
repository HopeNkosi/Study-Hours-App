@model IEnumerable<Study_Hours_App.Models.SemesterDashbaord>

@{
    ViewData["Title"] = "Index";
}

<h1>Semester</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SemesterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SemesterDuration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SemesterStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SemesterEndDate)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SemesterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SemesterDuration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SemesterStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SemesterEndDate)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.SemesterDashbaordId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SemesterDashbaordId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SemesterDashbaordId">Delete</a>
            </td>
        </tr>
