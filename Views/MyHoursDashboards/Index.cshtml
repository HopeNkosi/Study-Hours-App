@model IEnumerable<Study_Hours_App.Models.MyHoursDashboard>

@{
    ViewData["Title"] = "Index";
}

<h1>My Study Hours</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ModulesDashboard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumOfHoursSpent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumOfHoursLeft)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dateworked)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ModulesDashboard.ModuleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumOfHoursSpent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumOfHoursLeft)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dateworked)
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.MyHoursDashboardId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MyHoursDashboardId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MyHoursDashboardId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
