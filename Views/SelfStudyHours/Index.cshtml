@model IEnumerable<Study_Hours_App.Models.SelfStudyHours>

@{
    ViewData["Title"] = "Index";
}

<h1>Study Dashboard</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ModuleCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModuleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModuleCredits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SelfStudyHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumOfHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumOfHoursLeft)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semester)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleCredits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SelfStudyHour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumOfHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumOfHoursLeft)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semester)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.SelfStudyHoursId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SelfStudyHoursId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
